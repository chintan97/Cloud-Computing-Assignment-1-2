<script>
  function check_values089(){
    var weight089 = document.getElementById('weight089').value;
    var height089 = document.getElementById('height089').value;
    if (weight089 <= 0){
      alert('Weight can not be less or equal to zero!');
      document.getElementById('weight089').focus();
      return false;
    }
    else if (height089 <= 0){
      alert('Height can not be less or equal to zero!');
      document.getElementById('height089').focus();
      return false;
    }
    document.form_values.submit();
  }
</script>
<h3 class="display-4">Body Mass Index (BMI) app</h3>
<h4 class="display-6">Enter weight and height below to calculate BMI</h4>
<form name="form_values" action="/calculate089" method="POST">
  <div class="form-group">
    <label for="weight">Weight (in kg)</label>
    <input type="number" step="any" min="0" id="weight089" name="weight089" class="form-control">
  </div>
  <div class="form-group">
    <label for="height">Height (in meters)</label>
    <input type="number" step="any" min="0" id="height089" name="height089" class="form-control">
  </div>
  <input type="button" onclick="check_values089()" value="submit" class="btn btn-primary">
</form>

<% if (typeof bmi089 != 'undefined') {  %>
  <h4 class="display-6">BMI value = <%= bmi089 %></h4>
  <h4 class="display-6">Weight (in kg) = <%= weight089 %></h4>
  <h4 class="display-6">Height (in meters) = <%= height089 %></h4>
<% } %>
